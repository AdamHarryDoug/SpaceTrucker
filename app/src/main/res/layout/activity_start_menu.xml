<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context=".StartMenu"
    android:id="@+id/backround"
    android:background="@drawable/spaceship1">

    <TextView
        android:text="Space Trucker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="100sp"
        android:gravity="center"
        android:textColor="#ff0000c8"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/btnNew"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textSize="40dp"
        android:background="#ff1809ff"
        android:textColor="#ffffffff"
        android:layout_above="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Game"
        android:id="@+id/button"
        android:textSize="40dp"
        android:background="#ff1809ff"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Pilot Name"
        android:ems="10"
        android:id="@+id/editText"
        android:background="#ffffffff"
        android:visibility="invisible"
        android:layout_above="@+id/createGame"
        android:layout_alignRight="@+id/createGame" />

    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Create Game"
        android:id="@+id/createGame"
        android:textSize="40dp"
        android:background="#ff1809ff"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>
