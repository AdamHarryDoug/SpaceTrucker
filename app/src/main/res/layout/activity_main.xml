<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mvhwhinnery.spacetrucker.MainActivity"
    android:background="@drawable/mainbackground1"
    android:clickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="United Earth Credits:"
        android:id="@+id/textView2"
        android:gravity="left"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location:"
        android:id="@+id/textView3"
        android:gravity="left"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/Mars"
        android:layout_marginRight="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The Olsonator"
        android:id="@+id/textView4"
        android:gravity="left"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$$$$$$"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargo Bay"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ryan Olson"
        android:id="@+id/textView6"
        android:textColor="#ffffffff"
        android:layout_above="@+id/Purple"
        android:layout_toRightOf="@+id/Red" />

    <Button
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="Greeny"
        android:id="@+id/Green"
        android:background="#00ffffff"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="#ffffffff"
        android:layout_marginEnd="65dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_marginBottom="62dp"
        android:layout_above="@+id/Mars"
        android:layout_alignRight="@+id/textView4" />

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="106dp"
        android:layout_height="90dp"
        android:text="Purply"
        android:id="@+id/Purple"
        android:background="#00ffffff"
        android:textColor="#ffffffff"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Earthy"
        android:id="@+id/Earth"
        android:background="#00ffffff"
        android:textColor="#ffffffff"
        android:layout_marginStart="43dp"
        android:layout_alignTop="@+id/Purple"
        android:layout_alignRight="@+id/Mars"
        android:layout_marginRight="43dp" />

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:text="Marsy"
        android:id="@+id/Mars"
        android:background="#00ffffff"
        android:layout_marginEnd="30dp"
        android:layout_above="@+id/button3"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_marginRight="71dp" />

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="65dp"
        android:layout_height="67dp"
        android:text="Redy"
        android:id="@+id/Red"
        android:background="#00ffffff"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/Mars"
        android:layout_toRightOf="@+id/Purple" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="La Planeta del Olson"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Earth"
        android:textColor="#ffffffff" />
</RelativeLayout>
